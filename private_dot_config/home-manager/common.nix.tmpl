{ pkgs, ... }:

{
  home.username = "{{ .chezmoi.username }}";
  home.homeDirectory = "{{ .chezmoi.homeDir }}";

  # See https://search.nixos.org/packages
  home.packages = with pkgs; [
    # dotfiles
    chezmoi

    # git
    git
    gh
    lazygit

    # shell
    zsh
    oh-my-zsh
    sheldon
    starship
    direnv
    nix-direnv
    tree
    msedit
    ripgrep
    zoxide
    fzf
    fd
    bat

    # programming
    nodejs_24
    pnpm
    bun
    uv
    go
    rustup
    cargo-binstall
    cargo-make

    # others
    curl
    wget

    wakeonlan
  ];

  programs.home-manager.enable = true;
  home.stateVersion = "25.11";
}
